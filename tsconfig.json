{
  "compilerOptions": {
      "target": "es2018",
      "moduleResolution": "node",
      "isolatedModules": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "types": [],
      "forceConsistentCasingInFileNames": true
  },
  "include": [
    "types",
    "shared",
  ]
}