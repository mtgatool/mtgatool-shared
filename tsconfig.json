{
  "compilerOptions": {
      "module": "CommonJS",
      "target": "es2018",
      "declaration": true,
      "moduleResolution": "node",
      "isolatedModules": true,
      "esModuleInterop": true,
      "noImplicitAny": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "types": [],
      "outDir": "./dist", 
      "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "src",
  ]
}