{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es2018",
    "declaration": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "types" : ["jest"],
    "typeRoots" : ["./types", "node_modules/@types"],
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src", "types"]
}
